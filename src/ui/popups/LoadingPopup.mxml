<?xml version="1.0"?>
<popups:Popup xmlns:fx="http://ns.adobe.com/mxml/2009"
              xmlns:popups="ui.popups.*"
              xmlns:s="library://ns.adobe.com/flex/spark"
              width="100"
              height="100"
              skinClass="ui.skins.PanelSkinWhiteWithShadow">

    <fx:Script><![CDATA[
        import com.greensock.TweenLite;
        import com.greensock.TweenMax;
        import com.greensock.easing.Linear;

        import global.Icons;

        import mx.events.FlexEvent;

        override public function onCreationComplete(event:FlexEvent):void
        {
            super.onCreationComplete(event);

            TweenMax.fromTo(spinnerGroup, 2, {rotation: 0}, {rotation: 360, repeat: -1, ease: Linear.easeNone});
        }

        override public function dispose():void
        {
            TweenLite.killTweensOf(spinnerGroup);
        }
        ]]>
    </fx:Script>

    <s:VGroup width="100%"
              height="100%"
              horizontalAlign="center"
              verticalAlign="middle">
        <s:Group id="spinnerGroup"
                 width="0"
                 height="0">
            <s:Image source="{Icons.spinner}"
                     x="-16"
                     y="-16"
                     width="32"
                     height="32"
                     alpha=".2"
                     smooth="true"
                     includeInLayout="false" />
        </s:Group>
    </s:VGroup>

</popups:Popup>
