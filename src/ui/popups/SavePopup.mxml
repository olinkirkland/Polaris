<?xml version="1.0"?>
<popups:Popup xmlns:fx="http://ns.adobe.com/mxml/2009"
              xmlns:popups="ui.popups.*"
              xmlns:s="library://ns.adobe.com/flex/spark"
              skinClass="ui.skins.PanelSkinWhiteWithShadow">

    <fx:Script><![CDATA[
        import logic.PopupManager;
        import logic.SaveManager;

        import mx.collections.ArrayCollection;

        import mx.events.FlexEvent;

        override public function onCreationComplete(event:FlexEvent):void
        {
            super.onCreationComplete(event);

            validateListSaves();
        }

        private function validateListSaves():void
        {
            labelList.text    = "Loading";
            labelList.visible = true;

            SaveManager.instance.getSavesAsync(function (saves:Array):void
            {
                labelList.text    = "No saves found";
                labelList.visible = saves.length == 0;

                listSaves.dataProvider = new ArrayCollection(saves);
            });
        }

        private function onClickButtonClose(event:MouseEvent):void
        {
            PopupManager.open(new MainMenuPopup());
        }

        private function onClickButtonSave(event:MouseEvent):void
        {
            SaveManager.instance.save(inputSaveGameName.text);
            var infoPopup:InfoPopup = new InfoPopup();
            infoPopup.text          = "Game saved";
            infoPopup.popupOnClose  = new SavePopup();
            PopupManager.open(infoPopup);
        }
        ]]>
    </fx:Script>

    <s:VGroup horizontalAlign="center"
              width="400">
        <s:Label text="Save Game" />
        <s:Panel width="100%"
                 height="300">
            <s:Group width="100%"
                     height="100%">
                <s:List id="listSaves"
                        width="100%"
                        height="100%"
                        itemRenderer="ui.renderers.SaveItemRenderer">
                    <s:layout>
                        <s:VerticalLayout gap="5" />
                    </s:layout>
                </s:List>
                <s:VGroup width="100%"
                          height="100%"
                          horizontalAlign="center"
                          verticalAlign="middle">
                    <s:Label id="labelList" />
                </s:VGroup>
            </s:Group>
        </s:Panel>
        <s:TextInput id="inputSaveGameName"
                     prompt="Save As"
                     width="100%" />
        <s:Button id="buttonSave"
                  width="100%"
                  label="Save Game"
                  click="onClickButtonSave(event)"
                  skinClass="ui.skins.button.ButtonSkinFullWidth" />
        <s:Button id="buttonClose"
                  width="100%"
                  label="Back"
                  click="onClickButtonClose(event)"
                  skinClass="ui.skins.button.ButtonSkinFullWidth" />
    </s:VGroup>

</popups:Popup>
