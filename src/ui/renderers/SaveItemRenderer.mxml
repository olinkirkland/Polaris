<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
                xmlns:s="library://ns.adobe.com/flex/spark"
                creationComplete="onCreationComplete(event)"
                autoDrawBackground="false"
                width="100%"
                height="100%">
    <fx:Script><![CDATA[
        import global.Color;
        import global.Utils;

        import logic.Save;

        import mx.events.FlexEvent;

        private var save:Save;

        private function onCreationComplete(event:FlexEvent):void
        {
        }

        override public function set data(value:Object):void
        {
            if (!value)
                return;

            save = Save(value);

            labelName.text = save.name;
            labelSize.text = Utils.fixed(save.size / 1000, 2) + " MB";
            labelTime.text = Utils.formatTime(save.time);
        }
        ]]>
    </fx:Script>

    <s:HGroup width="100%"
              height="100%"
              gap="0"
              verticalAlign="middle">

        <s:Group width="100%">
            <s:Rect width="100%"
                    height="100%"
                    bottomLeftRadiusX="5"
                    bottomLeftRadiusY="5"
                    topLeftRadiusX="5"
                    topLeftRadiusY="5">
                <s:fill>
                    <s:SolidColor color="{Color.grey}" />
                </s:fill>
            </s:Rect>

            <s:VGroup padding="5"
                      paddingLeft="6"
                      paddingRight="6">
                <s:Label id="labelName"
                         fontWeight="bold" />
                <s:Label id="labelTime"
                         fontSize="10"
                         fontStyle="italic" />
            </s:VGroup>
        </s:Group>

        <s:Group height="100%">
            <s:Rect width="100%"
                    height="100%"
                    bottomRightRadiusX="5"
                    bottomRightRadiusY="5"
                    topRightRadiusX="5"
                    topRightRadiusY="5">
                <s:fill>
                    <s:SolidColor color="{Color.grey}"
                                  alpha=".3" />
                </s:fill>
            </s:Rect>

            <s:VGroup height="100%"
                      padding="5"
                      paddingLeft="6"
                      paddingRight="6"
                      verticalAlign="middle">
                <s:Label id="labelSize"
                         height="100%" />
            </s:VGroup>
        </s:Group>

    </s:HGroup>

</s:ItemRenderer>